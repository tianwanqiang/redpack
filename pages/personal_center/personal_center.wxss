page {
    width: 100%;
    height: 100%;
}

.content {
    width: 100%;
    height: 100%;
}

.top {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header_box {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100%;
    border: 4rpx solid #f2f2f2;
    margin-top: 40rpx;
    box-shadow: 0 0 30rpx #f0f0f0;
    overflow: hidden;
}

.header {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.name {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
    margin-top: 10rpx;
}

.money_box {
    width: 100%;
    height: 180rpx;
    text-align: center;
}

.money {
    width: 33.3%;
    height: auto;
    float: left;
    font-size: 32rpx;
}

.money_kind {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}

.money_value {
    color: #ff7012;
    font-size: 32rpx;
    font-weight: bold;
}

.space {
    width: 100%;
    height: 30rpx;
    background-color: #f8f8f8;
}

.list {
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 4% 0 10%;
    background-color: #fff;
    font-size: 32rpx;
    color: #322f2f;
    position: relative;
    box-sizing: border-box;
}

.line::after {
    content: '';
    width: 96%;
    height: 2rpx;
    background-color: #f3f3f3;
    position: absolute;
    right: 0;
    bottom: 0;
}

.icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
    vertical-align: middle;
    margin-top: 10rpx;
    position: absolute;
    top: 25rpx;
    left: 30rpx;
}

.arrow {
    width: 16rpx;
    height: 32rpx;
    float: right;
    margin-top: 35rpx;
}

.balance {
    position: absolute;
    top: -18rpx;
    right: 70rpx;
    color: #a8a8a8;
    font-size: 28rpx;
}

.safe_hint {
    position: absolute;
    top: 20rpx;
    right: 70rpx;
    color: #a8a8a8;
    font-size: 26rpx;
}

.contact {
    width: 90%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: left;
    padding-left: 0;
    font-size: 32rpx;
    display: inline-block;
    background-color: #ffffff;
}

.contact::after {
    border: none;
}