page {
    width: 100%;
    height: 100%;
    font-family: "microsoft yahei";
}

.content {
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
}

.top {
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    position: relative;
    background-color: #fff;
}

.header {
    width: 180rpx;
    height: 180rpx;
    vertical-align: middle;
    margin: 0 30rpx;
    border: 4rpx solid #f2f2f2;
    border-radius: 50%;
}

.username {
    font-size: 34rpx;
    font-weight: 500;
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    display: inline-block;
    vertical-align: middle;
}

.User_name {
    width: 100%;
    height: 100%;
}

.camera_icon {
    position: absolute;
    top: 120rpx;
    left: 95rpx;
    width: 50rpx;
    height: 45rpx;
}

.eidt_header {
    position: absolute;
    top: 20px;
    left: 75rpx;
    width: 100rpx;
    height: 28rpx;
    font-size: 24rpx;
    color: #fff;
    z-index: 5;
}

.space {
    width: 100%;
    height: 20rpx;
    background-color: #f8f8f8;
}

.list {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 4%;
    background-color: #ffffff;
    font-size: 32rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
}

.line::after {
    content: '';
    width: 96%;
    height: 2rpx;
    background-color: #f3f3f3;
    position: absolute;
    right: 0;
    bottom: 0;
}

.bind {
    display: inline-block;
    width: 25%;
    height: 100rpx;
    color: #a8a8a8;
}

.bindphone {
    width: 75%;
    height: 100rpx;
    line-height: 100rpx;
    color: #ff7102;
    margin: 0;
    padding: 0;
    font-size: 32rpx;
    background-color: #ffffff;
    text-align: left;
}

.bindphone1 {
    width: 75%;
    height: 100rpx;
    line-height: 100rpx;
    color: #000000;
    margin: 0;
    padding: 0;
    font-size: 32rpx;
    background-color: #ffffff;
    text-align: left;
}

.bindphone::after {
    border: none;
}

.exit {
    width: 92%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #ff7102;
    color: #ffffff;
    margin-top: 100rpx;
    font-size: 32rpx;
}

.save {
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 40rpx;
    color: #fff;
    background-color: #ff7102;
    font-size: 32rpx;
    margin-top: 100rpx;
}

.safe_hint {
    width: 100%;
    text-align: center;
}

.safe_icon {
    width: 148rpx;
    height: 42rpx;
    margin: 20rpx 0 10rpx 0;
}

.txt {
    display: inline-block;
    width: 100%;
    padding: 0 45rpx;
    font-size: 24rpx;
    text-align: center;
    box-sizing: border-box;
    color: #6c6c6c;
}