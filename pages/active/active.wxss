page {
    width: 100%;
    height: 100%;
    font-family: "microsoft yahei";
    box-sizing: border-box;
}

.content {
    width: 100%;
    height: auto;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.serch {
    width: 100%;
    height: 80rpx;
}

.left {
    width: 80%;
    height: 80rpx;
    float: left;
    border: 2rpx solid #c3c3c3;
    background-color: #f8f8f8;
    border-radius: 40rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
}

.erweima {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin-top: 8rpx;
    float: left;
}

.doserch {
    width: 20%;
    height: 80rpx;
    line-height: 80rpx;
    float: right;
    text-align: center;
    font-size: 32rpx;
}

.serchid {
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    float: left;
    padding-left: 20rpx;
    font-size: 32rpx;
}

.active {
    position: relative;
    width: 100%;
    height: 220rpx;
    margin-bottom: 30rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.active_name {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 25rpx;
    color: #ffffff;
    font-size: 40rpx;
    font-weight: bold;
    margin-top: 20rpx;
}

.introduce {
    width: 80%;
    height: auto;
    color: #ffffff;
    font-size: 32rpx;
    padding-left: 25rpx;
}

.active_classname_bg {
    position: absolute;
    top: -120rpx;
    right: -100rpx;
    width: 200rpx;
    height: 200rpx;
    background-color: rgba(0,0,0,.3);
    transform: rotate(45deg);
    z-index: 1;
}

.active_classname {
    position: absolute;
    top: 0;
    right: 0;
    font-size: 24rpx;
    width: 70rpx;
    height: 100rpx;
    text-align: center;
    line-height: 75rpx;
    color: #ffffff;
    z-index: 2;
}

.custom {
    width: 100%;
    height: 220rpx;
    margin: 30rpx 0 0rpx 0;
    border-radius: 8rpx;
    line-height: 220rpx;
    text-align: center;
    font-size: 60rpx;
    color: #322f2f;
    border: 2rpx solid #ccc;
    background-color: #f8f8f8;
}

.addactive {
    width: 150rpx;
    height: 150rpx;
    border: 2rpx solid #ffffff;
    border-radius: 75rpx;
    vertical-align: middle;
    margin-left: 30rpx;
}

.challenge_img {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}