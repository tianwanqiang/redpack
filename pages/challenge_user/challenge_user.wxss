page {
    width: 100%;
    height: 100%;
}

.content {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.hint {
    width: 100%;
    text-align: center;
    padding-top: 20rpx;
    font-size: 32rpx;
    color: #525252;
}

.show-user {
    width: 100%;
    height: auto;
}

.mould {
    width: 20%;
    height: auto;
    float: left;
    text-align: center;
    margin: 20rpx 0;
    box-sizing: border-box;
}

.clear {
    clear: both;
}

.user_header {
    width: 100rpx;
    height: 100rpx;
    border-radius: 8rpx;
}

.user_name {
    width: 100rpx;
    height: 24rpx;
    font-size: 24rpx;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding: 0;
    margin: auto;
    line-height: 24rpx;
}